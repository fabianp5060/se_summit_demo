<center>
  <h3>Dial <%= $did %> to start the Demo</h3>
  <p>After completing the call, refresh the webpage to see the results</p>
</center>
<div class="Vlt-table" align="center">
  <table>
    <thead>  
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>DTMF Selection</th>
      </tr>
    </thead>
    <tbody>
      <% @db.each do |db_entry| %>
      <tr>
        <td><%=db_entry.attributes[:first_name]%></td>
        <td><%=db_entry.attributes[:last_name]%></td>
        <td><%=db_entry.attributes[:phone_number]%></td>
        <td><%=db_entry.attributes[:dtmf]%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<center>
  <form method="POST" action="/users_boot">
    <div class="Vlt-form__element Vlt-form__element--big">
      <div class="Vlt-input"><h3>First Name<input type="text" name="first_name"></h3></div>
      <div class="Vlt-input"><h3>Last Name<input type="text" name="last_name"></h3></div>
      <div class="Vlt-input"><h3>Phone Number<input type="text" name="phone_number"></h3></div>
    </div>
    <div class="Vlt-form__element Vlt-form__element--big">            
      <button class="Vlt-btn Vlt-btn--primary" type="Submit">Add User</button>
    </div>    
  </form>  
</center>